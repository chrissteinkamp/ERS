        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <a href="" title="Team Collaboration">
                <img src="http://www.akpsicu.org/wp-content/uploads/2014/04/Professional-Couple.jpg" alt="Image">
            </a>
            <div class="carousel-caption">
                <h3 id="carousel-cap">We Strive for Quality Service</h3>
            </div>
        </div>

        <div class="item">
            <a href="" title="Support">
                <img src="http://tiarraboltonportfolio.weebly.com/uploads/2/9/9/3/29934397/402324_orig.jpg" alt="Image">
            </a>
            <div class="carousel-caption">
                <h3 id="carousel-cap">Support</h3>
            </div>
        </div>


        <div class="item">
            <a href="" title="International">
                <img src="http://menfash.us/wp-content/uploads/2013/03/Professional-dressing-tips-4.jpeg" alt="Image">
            </a>
            <div class="carousel-caption">
                <h3 id="carousel-cap">World Wide</h3>
            </div>
        </div>

        <div class="item">
            <a href="" title="Donate">
                <img src="http://gemtheatre.org/images/Donations.jpg" alt="Image">
            </a>
            <div class="carousel-caption">
                <h3 id="carousel-cap">Donate</h3>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
